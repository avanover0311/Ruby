
<div class="container">
  
    <h1>Welcome!</h1>
      <% if flash[:notice] %>
        <% flash[:notice].each do |note| %>
          <p id="notice"><%= note %></p>  
        <% end %>
      <% end %>
<div class="row">
  <div class="col-sm-2">
    <h2>Register</h2>
  <form action = "/users" method = "post">
  <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
    <label>First Name</label>
      <input type = "text" name = "user[first_name]" id = "first_name">
    <label>Last Name</label>
      <input type = "text" name = "user[last_name]" id = "last_name">
    <label>Email</label>
      <input type = "text" name = "user[email]" id = "email">
    <label>Location</label>
      <input type = "text" name = "user[location]" id = "location">
      <div>
        <select class="form-control" id="state" name="user[state]">
